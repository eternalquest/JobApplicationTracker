{
  "manifest_version": 3,
  "name": "Job Applications Tracker",
  "version": "1.0",
  "description": "Track your job applications and store them in Google Sheets automatically.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://script.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon1.png",
      "48": "icon1.png",
      "128": "icon1.png"
    }
  },
  "icons": {
    "16": "icon1.png",
    "48": "icon1.png",
    "128": "icon1.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "https://www.naukri.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
